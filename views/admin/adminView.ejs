<!-- Chart Start -->


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <title>Document</title>
</head>
<body>
    
 

<div class="container-fluid pt-3 ">

    <div class="row px-xl-5">
        
        

        <div class="col-lg-4 table-responsive mx-auto mb-5">   
            <!--Chart-->
            <div>
                <div>
                    <h3 class="d-flex flex-column align-items-center justify-content-center">Popular Categories</h3>
                </div>
                <input type="hidden" value="<%=name %>" id="name">
                <input type="hidden" value="<%=count%>" id="count">
                <canvas id="myChart"></canvas>
            </div>
            <script type="text/javascript">
            const name = document.getElementById('name');
            const nameArray = name.value.split(',');
            console.log(nameArray);
            const count = document.getElementById('count');
            const countArray = count.value.split(',');
            console.log(countArray);
            const pop = document.getElementById('myChart');       
                        new Chart(pop, {
                          type: 'pie',
                          data: {
                            labels: nameArray,
                            datasets: [{
                              label: 'Order:',
                              data: countArray,
                              borderWidth: 1
                            }]
                          }
                        })
        </script>    
        </div>
    </div>
</div>

<br>
<br>
<div  style="margin-left: 8em;">
<form action="/admin/goback">
    <button type="submit">Go Back</button>
    </form>
</div>
<!-- Chart End -->


<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>
</html>