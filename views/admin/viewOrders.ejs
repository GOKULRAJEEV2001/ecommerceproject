                <div class="row">
                    <!-- column -->
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <!-- title -->
                                <div class="d-md-flex">
                                    <div>
                                        <h4 class="card-title">Orders</h4>
                                        <h5 class="card-subtitle">Overview of the Orders</h5>
                                    </div>
                                  
                                </div>
                                <!-- title -->
                            </div>
                            <div class="table-responsive">
                                <table class="table v-middle">
                                    <thead>
                                        <tr class="bg-light">
                                            <th class="border-top-0">SL NO</th>
                                            <th class="border-top-0">Order ID</th>
                                            
                                            <th class="border-top-0">User Email</th>
                                            <th class="border-top-0">Date</th>
                                            
                                            <th class="border-top-0">Payment<br>Type</th>
                                            <th class="border-top-0">Total<br>Prize</th>
                                            <th class="border-top-0">Address</th>
                                        
                                            <th class="border-top-0">Status</th>
                                            <th class="border-top-0">Actions</th>
                                            
                                            <th class="border-top-0"></th>
                                            
                                            


                                           
                                        </tr>
                                    </thead>

                                    <tbody>

                                        <% if(orders.length >=0 ){ %>
                                            <% for(let i=1; i<orders.length; i++){ %>
                                                 <tr>
                                                <td><%= i %></td>
                                                    
                                                <td> <%= orders[i-1]._id %></td>
                                                <td> <%= orders[i-1].email %></td>
                                                <td> <%= orders[i-1].createdAt %></td>
                                                
                                                <td> <%= orders[i-1].payment %></td>
                                                <td> <%= orders[i-1].totalPrice %> </td>
                                                
                                                
                                                <td> <%= orders[i-1].address %><br><%= orders[i-1].town %><br><%= orders[i-1].state %><br><%= orders[i-1].postcode %><br><%= orders[i-1].phone %></td>


                                                <td>
                                                    <% if(orders[i-1].is_varified == 0){ %> 
                                                 <p>not verified</p>
                                                 <% }else{ %>
                                                 <p>verified</p>

                                                <% } %>
                                                <td>
                                                    <form action="/admin/order-status?id=<%=orders[i-1]._id %> "
                                                        method="post">
                                                        <button class="btn btn-outline-primary"><i
                                                                class="m-r-5 mdi mdi-border-color"></i>confirm</a><br></button>
                                                    </form>
                                                    <form action="/admin/cancel-order?id=<%=orders[i-1]._id %>"
                                                        method="post">
                                                        <button class="btn btn-outline-danger" href=""><i
                                                                class=" m-r-5 mdi mdi-delete-forever"></i>
                                                            Cancel</button>
                                                    </form>

                                                </td>
                                                
                                                     
                                                        
                                                    
                                            <%}%>



                                        <% } %>    
                                        </tr> 
                                        
