                    <div class="card">
                        <div class="card-body">
                            <form class="form-horizontal form-material mx-2" action="/admin/add-banner" method="post" enctype="multipart/form-data">
                                <div class="form-group d-flex">
                                    <div style="margin-left: 10px;">
                                        <label class="col-md-12">Add Banner</label>
                                        <div class="col-md-12">
                                            <input type="file"  name="image"
                                                class="form-control form-control-line" 
                                                style="width: 180px;">
                                        </div>
                                    </div>
                                 
                                    <div style="margin-left: 10px">
                                        <label class="col-md-12">Banner Heading</label>
                                        <div class="col-md-12">
                                            <input type="text" name="head" placeholder="Click Here"
                                                class="form-control form-control-line" name="category"
                                                style="width: 180px;">
                                        </div>

                                    </div>
                                </div>

                                <div style="margin-left: 10px">
                                    <label class="col-md-12">Banner subHeading</label>
                                    <div class="col-md-12">
                                        <input type="text" name="sub" placeholder="Click Here"
                                            class="form-control form-control-line" name="category"
                                            style="width: 180px;">
                                    </div>

                                </div>

                                <div class="form-group mt-4">
                                    <div class="col-sm-12">
                                        <button type="submit" class="btn btn-success text-white">Add Banner</button>
                                    </div>
                                </div>
                            </form>


                            <div class="table-responsive">
                                <table class="table-responsive table table-hover table-striped"
                                    style="table-layout: fixed;">
                                    <thead>
                                        <tr>
                                            <th scope="col">SI NO</th>
                                            <th scope="col">Date added</th>
                                            <th scope="col">Banner Image</th>
                                            
                                            <th scope="col">Banner Head</th>
                                            <th scope="col">Banner sub Head</th>
                                            <th scope="col">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if( banner.length > 0){ %>
                                            <% for(let i=1;i <=banner.length; i++){ %>
                                                <tr>
                                                    <th scope="row">
                                                        <%= i %>
                                                    </th>
                                                    <td>
                                                        <%= banner[i-1].uploadedAt.toDateString()%>
                                                    </td>
                                                    <td>
                                                        <% if(banner[i-1].bannerImage) { %>
                                                            <img src="/assets/uploads/<%= banner[i-1].bannerImage %>"
                                                                width="100vw" height="100vh">
                                                            <% }else{ %>
                                                                Image Not Found
                                                                <% } %>
                                                    </td>

                                                    <td>
                                                        <%= banner[i-1].bannerHead%>
                                                    </td>
                                                    <td>
                                                        <%= banner[i-1].bannerSub%>
                                                    </td>
                                                    <td>
                                                        <form
                                                            action="/admin/delete-banner?id=<%= banner[i-1]._id %>"
                                                            method="post">
                                                            <button type="submit" class="btn btn-outline-danger"><i
                                                                    class=" m-r-5 mdi mdi-delete-forever"></i>
                                                                Delete</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                                <!-- model bootstrap -->
                                                <% }} else { %>
                                                    <tr>
                                                        <td colspan="5">Banner Not Found</td>
                                                    </tr>
                                                    <% } %>

                                    </tbody>
                                </table>
